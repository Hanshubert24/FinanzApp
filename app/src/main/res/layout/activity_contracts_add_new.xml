<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Contracts.ContractsAddNew">

    <ImageView
        android:id="@+id/contracts_overwiev_image_contract2"
        android:layout_width="81dp"
        android:layout_height="62dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/general_discription_Image_Contract"
        android:paddingTop="6dp"
        android:src="@drawable/contract_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/buttonBackContractsAddNew"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contract_image" />

    <Button
        android:id="@+id/buttonBackContractsAddNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="NavBack"
        android:text="@string/assets_back"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBackContractsAddNew">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Contract_type"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_orange"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/contracts_type"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextContractType"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_blue"
                android:ems="10"
                android:hint="@string/contracts_hint_type"
                android:importantForAutofill="no"
                android:inputType="textPersonName|textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="2dp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/textView_Contract_name"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_orange"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/contracts_name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextContractName"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_blue"
                android:ems="10"
                android:hint="@string/contract_hint_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName|textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="2dp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/textView_Contract_monthly_costs"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_orange"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/contracts_monthly_costs"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextContractMonthlyCosts"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_blue"
                android:ems="10"
                android:hint="@string/genreral_new_numeric_euro"
                android:importantForAutofill="no"
                android:inputType="number|numberDecimal"
                android:paddingStart="10dp"
                android:paddingEnd="2dp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/textView_Contract_note"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_orange"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/contracts_note"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextContractNote"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_gradient_blue"
                android:ems="10"
                android:hint="@string/contract_hint_note"
                android:importantForAutofill="no"
                android:inputType="textLongMessage|textPersonName|textEmailAddress"
                android:paddingStart="10dp"
                android:paddingEnd="2dp"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textColorHint="@color/cardview_shadow_start_color" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="SaveContract"
        android:text="@string/assets_save"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>