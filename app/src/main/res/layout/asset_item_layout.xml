<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/assets_item_financialasset"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:text="@string/assets_financialasset_name"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/itemAssetsFinancialAsset"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemAssetsFinancialAsset"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:text="@string/general_textview_placeholder"
        android:textAlignment="textEnd"
        android:textColor="@color/money_positiv_green"
        app:layout_constraintEnd_toStartOf="@+id/textViewEuro2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEuro2"
        android:layout_width="8dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/asset_item_layout_euro"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/assets_credit_name"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:text="@string/assets_credit_name"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/itemAssetsCredit"
        app:layout_constraintTop_toBottomOf="@+id/assets_item_financialasset" />

    <TextView
        android:id="@+id/textViewEuro"
        android:layout_width="8dp"
        android:layout_height="21dp"
        android:layout_marginEnd="16dp"
        android:text="@string/asset_item_layout_euro"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEuro2" />

    <TextView
        android:id="@+id/itemAssetsCredit"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:text="@string/general_textview_placeholder"
        android:textAlignment="textEnd"
        android:textColor="@color/money_negatic_red"
        app:layout_constraintEnd_toStartOf="@+id/textViewEuro"
        app:layout_constraintTop_toBottomOf="@+id/itemAssetsFinancialAsset" />

    <TextView
        android:id="@+id/itemAssetsCategory"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_gradient_blue"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/general_textview_placeholder"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/assets_item_financialasset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemAssetsName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/general_textview_placeholder"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textviewincome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemAssetsCategory"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextViewEuro2"
        android:layout_width="8dp"
        android:layout_height="21dp"
        android:layout_marginEnd="16dp"
        android:text="@string/asset_item_layout_euro"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewEuro" />

    <TextView
        android:id="@+id/textviewincome"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:text="@string/asset_item_layout_income"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/itemAssetsMonthlyEarnings"
        app:layout_constraintTop_toBottomOf="@+id/textviewcosts" />

    <TextView
        android:id="@+id/textviewcosts"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:text="@string/asset_item_layout_costs"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/itemAssetsMonthlyCosts"
        app:layout_constraintTop_toBottomOf="@+id/assets_credit_name" />

    <TextView
        android:id="@+id/itemAssetsMonthlyCosts"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:text="@string/general_textview_placeholder"
        android:textAlignment="textEnd"
        android:textColor="@color/money_negatic_red"
        app:layout_constraintEnd_toStartOf="@+id/TextViewEuro"
        app:layout_constraintTop_toBottomOf="@+id/itemAssetsCredit" />

    <TextView
        android:id="@+id/TextViewEuro"
        android:layout_width="8dp"
        android:layout_height="21dp"
        android:layout_marginEnd="16dp"
        android:text="@string/asset_item_layout_euro"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEuro" />

    <TextView
        android:id="@+id/itemAssetsMonthlyEarnings"
        android:layout_width="120dp"
        android:layout_height="21dp"
        android:text="@string/general_textview_placeholder"
        android:textAlignment="textEnd"
        android:textColor="@color/money_positiv_green"
        app:layout_constraintEnd_toStartOf="@+id/TextViewEuro2"
        app:layout_constraintTop_toBottomOf="@+id/itemAssetsMonthlyCosts" />

</androidx.constraintlayout.widget.ConstraintLayout>